@model WeconnectAdmin.Models.Post

@{
    ViewData["Title"] = "Confirm Deletion";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-body">
                <h5>Are you sure you want to delete the post titled "@Model.Title"?</h5>
                <p><strong>Caption:</strong> @Model.Caption</p> <!-- Display Caption -->
                <p><strong>Posted by:</strong> @Model.User?.Username</p> <!-- Display the User's name -->

                <div class="mt-3">
                    <img src="@Model.ImagePath" alt="Post Image" class="img-fluid" width="300" />
                </div>

                <form method="post" action="@Url.Action("DeletePostConfirmed", "Home", new { id = Model.Id })" class="mt-3">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a href="@Url.Action("Dashboard", "Home")" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
